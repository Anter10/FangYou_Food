<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activitys.EmailLoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/input_text_high"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="@string/please_input_email_number"
        android:textSize="@dimen/btn_text_fontsize"
        android:id="@+id/pleaseinputemailaddress"
        android:layout_marginTop="@dimen/margin_top_high"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textSize="@dimen/btn_text_fontsize"
        android:hint="@string/please_input_password"
        android:layout_marginTop="@dimen/margin_top_high"
        android:id="@+id/pleaseinputpassword"
        android:layout_below="@+id/pleaseinputemailaddress"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/pleaseinputemailaddress" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_btn_name"
        android:id="@+id/emailloginbtn"
        android:layout_marginTop="@dimen/register_margin_top_high"
        android:textSize="@dimen/btn_text_fontsize"
        android:layout_below="@+id/pleaseinputpassword"
        android:layout_alignEnd="@+id/pleaseinputpassword"
        android:layout_alignParentStart="true" />
</RelativeLayout>
