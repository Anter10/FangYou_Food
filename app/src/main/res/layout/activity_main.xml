<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.jjkj.guoyouchao.fangyou_food.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/input_text_high"
        android:inputType="phone"
        android:ems="10"
        android:hint="@string/please_input_phoneNumber"
        android:textSize="@dimen/btn_text_fontsize"
        android:text="15010215839"
        android:id="@+id/input_phone_id"
        android:layout_marginTop="@dimen/margin_top_high"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_btn_name"
        android:id="@+id/login_button"
        android:textSize="@dimen/btn_text_fontsize"

        android:layout_marginTop="@dimen/login_btn_top_margin"
        android:layout_below="@+id/input_phone_id"
        android:layout_alignParentStart="true"

        android:layout_alignEnd="@+id/input_phone_id" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更多"
        android:id="@+id/more_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textSize="@dimen/btn_text_fontsize"
        android:hint="@string/please_input_password"
        android:text="abc123"
        android:layout_marginTop="@dimen/margin_top_high"
        android:id="@+id/password"
        android:layout_below="@+id/input_phone_id"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/login_button" />
</RelativeLayout>
